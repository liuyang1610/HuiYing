<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/wight"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40.0dip">

        <ImageView
            android:id="@+id/fenlei"
            android:layout_width="20.0dip"
            android:layout_height="20.0dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10.0dip"
            android:background="@drawable/fenlei" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/lineblack"
            android:orientation="horizontal"
            android:padding="1.0dip">

            <TextView
                android:id="@+id/zhengzai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/banbuttonblack"
                android:paddingBottom="5.0dip"
                android:paddingLeft="10.0dip"
                android:paddingRight="10.0dip"
                android:paddingTop="5.0dip"
                android:text="正在上映"
                android:textColor="@color/wight"
                android:textSize="12.0sp" />

            <TextView
                android:id="@+id/jijiang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/banbuttonwight"
                android:paddingBottom="5.0dip"
                android:paddingLeft="10.0dip"
                android:paddingRight="10.0dip"
                android:paddingTop="5.0dip"
                android:text="即将上映"
                android:textSize="12.0sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/sousuo"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            android:background="@drawable/sousuo" />
    </RelativeLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/tablayout"
        android:layout_width="160.0dip"
        android:layout_height="40.0dip"
        android:layout_centerHorizontal="true"
        android:background="#ffffffff"
        android:visibility="gone" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />
</LinearLayout>
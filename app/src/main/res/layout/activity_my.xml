<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/hengxian"
    android:orientation="vertical">

    <include layout="@layout/putongtitle" />

    <RelativeLayout
        android:id="@+id/touxiangdian"
        android:layout_width="fill_parent"
        android:layout_height="80.0dip"
        android:background="@color/wight">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15.0dip"
            android:text="头像" />

        <ImageView
            android:id="@+id/you"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15.0dip"
            android:background="@drawable/youjiantou" />

        <com.thinkcool.circletextimageview.CircleTextImageView
            android:id="@+id/icon"
            android:layout_width="53.0dip"
            android:layout_height="53.0dip"
            android:layout_centerVertical="true"
            android:layout_marginRight="10.0dip"
            android:layout_toLeftOf="@+id/you"
            android:src="@drawable/icontou" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:background="@color/hengxian" />

    <RelativeLayout
        android:id="@+id/nicheng"
        android:layout_width="fill_parent"
        android:layout_height="45.0dip"
        android:background="@color/wight">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15.0dip"
            android:text="昵称" />

        <ImageView
            android:id="@+id/you1"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15.0dip"
            android:background="@drawable/youjiantou" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10.0dip"
            android:layout_toLeftOf="@+id/you1"
            android:text="17600581610" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:background="@color/hengxian" />

    <RelativeLayout
        android:id="@+id/mima"
        android:layout_width="fill_parent"
        android:layout_height="45.0dip"
        android:background="@color/wight"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15.0dip"
            android:text="密码修改" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15.0dip"
            android:background="@drawable/youjiantou" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="10.0dip"
        android:background="@color/hengxian" />

    <RelativeLayout
        android:id="@+id/iphonenum"
        android:layout_width="fill_parent"
        android:layout_height="45.0dip"
        android:background="@color/wight">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15.0dip"
            android:text="手机号" />

        <ImageView
            android:id="@+id/you2"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15.0dip"
            android:background="@drawable/youjiantou" />

        <TextView
            android:id="@+id/iphone2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10.0dip"
            android:layout_toLeftOf="@+id/you2"
            android:text="17600581610" />
    </RelativeLayout>
</LinearLayout>